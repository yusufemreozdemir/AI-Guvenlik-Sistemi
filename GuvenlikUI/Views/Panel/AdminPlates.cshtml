@model List<GuvenlikUI.Models.AdminPlateModel>
@{ ViewData["Title"] = "Plaka Envanteri"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-database"></i> Sistemdeki Tüm Plakalar</h2>
        <a asp-action="AdminDashboard" class="btn btn-outline-dark">Geri Dön</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Plaka No</th>
                        <th>Kayıt Tarihi</th>
                        <th>Ekleyen Kullanıcı (Sahibi)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold font-monospace fs-5">@item.plate_number</td>
                            <td>@item.created_at.ToString("dd.MM.yyyy")</td>
                            <td>
                                <span class="badge bg-secondary fs-6">@item.owner_username</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>