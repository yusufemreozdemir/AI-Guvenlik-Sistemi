@model List<GuvenlikUI.Models.AdminLogModel>
@{ ViewData["Title"] = "Log Kayıtları"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-journal-text"></i> Sistem Geçiş Logları</h2>
        <a asp-action="AdminDashboard" class="btn btn-outline-dark">Geri Dön</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Tarih/Saat</th>
                        <th>Plaka</th>
                        <th>İlişkili Kişi</th>
                        <th>AI Araç Tanımı (VLM)</th> <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td class="fw-bold font-monospace">@log.plate_number</td>
                            <td>
                                @if(log.related_user != "Misafir/Tanımsız") {
                                    <span class="badge bg-info text-dark">@log.related_user</span>
                                } else {
                                    <span class="text-muted">@log.related_user</span>
                                }
                            </td>
                            <td>
                                @if(!string.IsNullOrEmpty(log.vlm_description)){
                                    <small class="text-muted"><i class="bi bi-car-front"></i> @log.vlm_description</small>
                                }
                                else{
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (log.access_status){
                                    <span class="badge bg-success">Başarılı Giriş</span>
                                }
                                else{
                                    <span class="badge bg-danger">Reddedildi / İzinsiz</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>